.map_container{
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0rpx;
}
#map{
  width: 100%;
  height: 100%;
}
.map-search-wrapper{
  position: absolute;
  top: 0;
  left: 0;
  width: 90%;
  height: 80rpx;
  z-index: 100;
  background: #fff;
  margin: 20rpx 0 0 5%;
  display: flex;
}
.map-search{
  width: 70%;
  height: 100%;
  padding-left: 20rpx;
}

.route-btn{
  position: absolute;
  bottom: 100rpx;
  right: 40rpx;
  z-index: 100;
  background-image: url('https://www.easyicon.net/api/resizeApi.php?id=1218852&size=128');
  background-size: 70% 70%;
  background-repeat: no-repeat;
  background-color: DodgerBlue;
  background-position-x: 12rpx;
  opacity: 0.9;
  font-size: 30rpx;
  padding-top: 20rpx;

  color: #fff;
}
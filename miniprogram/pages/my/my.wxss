.user-wrapper{
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: #f0f0f0;
}
.user-box{
  width: 100%;
  height: 400rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.user-header{
  width: 100%;
  height: 400rpx;
  overflow: hidden;
}
.user-bgimg{ 
  background-image: url("http://img.mp.itc.cn/upload/20160530/26bddc007cd54535998b854d46147ab2_th.JPG");
  background-size: 100%;
}
.user-bg{
  background: #fff;
  opacity: 0.9;
}

.user-message-list{
  width: 100%;
  overflow: hidden;
  margin-top: 40rpx;
  padding: 0 40rpx 0 40rpx;
  box-sizing: border-box;
}
.user-img{
  width: 160rpx;
  height: 160rpx;
  background: LightSteelBlue;
  border-radius: 50%;
  overflow: hidden;
  float: left;
}
.user-myimg{
  width: 100%;
  height: 100%;
}
.user-login-message{
  font-size: 44rpx;
  float: left;
  margin: 44rpx 0 0 20rpx;
}
.user-login{
  float: right;
  margin: 36rpx 0 0 0;
}

.user-login-message2{
  font-size: 44rpx;
  float: left;
  margin: 10rpx 0 0 20rpx;
}
.user-name{
  width: 260rpx;
  padding: 20rpx 0 0 40rpx;
  position: relative;
}

.user-lv{
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  color: red;
  font-size: 20rpx;
  border: 2rpx solid red; 
  border-radius: 20rpx;
  padding: 2rpx 10rpx;
  box-sizing: border-box; 
}

.user-cj{
  font-size: 26rpx;
  margin-top: 10rpx;
  color: #666;
}

.sign-wrapper{
  width: 100%;
  height: 100rpx;
  background: #fff;
  margin-top: 20rpx;
  display: flex;
}

.sign-title{
  width: 160rpx;
  font-size: 40rpx;
  text-align: center;
  line-height: 100rpx;
}

.sign-num{
  line-height: 100rpx;
  padding-left: 40rpx;
  box-sizing: border-box;
  font-size: 50rpx;
  color: #666;
  flex: 1;
}
.sign-numtext{
  font-size: 42rpx;
  color: #FFC125;
  font-weight: 700;
}

.system-content{
  width: 100vw;
  background: #fff;
  padding: 40rpx 40rpx 0 40rpx;
  box-sizing: border-box;
}
.system-item{
  overflow: hidden;
  padding-bottom: 40rpx;
  color: #666;
}
.system-te{
  float: right;
}


.anlogin-box{
  background: #fff;
  margin-top: 20rpx;
  padding: 20rpx 0 20rpx 0;
}